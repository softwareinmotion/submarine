<h2>Backlog</h2>

<table>
  <tr>
    <th><%= t 'activerecord.attributes.issue.id' %></th>
    <th><%= t 'activerecord.attributes.issue.type' %></th>
    <th colspan="2"><%= t 'activerecord.attributes.issue.name' %></th>
    <th colspan="2"><%= t 'activerecord.attributes.issue.story_points' %></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td>#<%= issue.id %></td>
    <td><%= issue.type %></td>
    <td><%= issue.name %></td>
    <td><%= issue.story_points %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td>Aufklappen<td>
  </tr>
  <tr >
   <td colspan="6" style="display: none;"><%= issue.description %></td>
  </tr>

<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>
