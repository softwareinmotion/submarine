<section id="main">

	<article class="issue_form">

		<ul class="form_header">
      <li>#<%= @issue.id %> <%= t 'issue.edit' %></li>
		</ul>
    
		<%= render 'form' %>

	</article>

</section>

<script type="text/javascript">
$(document).ready(function(){
  $("div.sp_radio_images div.radio_image").click(SUBMARINE.check_sp_radio_image);
  $("div.type_radio_images div.radio_image").click(SUBMARINE.check_type_radio_image);
  $("div.project_radio_images div.radio_image").click(SUBMARINE.check_project_radio_image);

  SUBMARINE.preselect_radio_images('<%= @issue.formatted_story_points %>', '<%= @issue.type %>', '<%= @issue.project.name %>');
});
</script>
