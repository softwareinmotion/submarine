SUBMARINE = {
  changeOrderHandler: function(event){
    var rowIndex = $(event.target).parent('li');
  
  if(rowIndex.parent('ul')[0].id == "sprint_backlog_list"){
      var data = { moved_issue_id: rowIndex.attr("data-id") };
      var backlog_list =  $('ul#backlog_list');
      var sprint_backlog_list = $('ul#sprint_backlog_list');
      data.backlog_list = backlog_list;
      data.sprint_backlog_list = sprint_backlog_list;
      alert('ok2')
      $.ajax({
        type: 'POST',
        url: SUBMARINE.changeListURL,
        data: data,
        error: function(){window.alert(SUBMARINE.messages.save_failed)}    
      })
    }else{
      var data = { moved_issue_id: rowIndex.attr("data-id") };
      data.predecessor_id = $(rowIndex).prev() && $(rowIndex).prev().attr("data-id");
      $.ajax({
        type: 'POST',
        url: SUBMARINE.changeOrderURL,
        data: data,
        error: function(){window.alert(SUBMARINE.messages.save_failed)}    
      })
    }
    
  },
  toggleDescription: function(event){
    if($(this).hasClass("short")){
      $(this).removeClass("short");
      var div_height = $(this).height();
      $(this).parents("tr").find("td").css("height",div_height+15);
    } else {
      $(this).addClass("short").parents("tr").find("td").css("height", "auto" );
    }
  },
  showStoryPointsSum: function(event){
    var rowIndex = $(event.target).parent('li').parent('ul').children.length;
    var sum = 0;
    var elements = $("ul > li > span.story_points");
    for(i = 0; i < rowIndex; i++) {
      value = $(elements[i]).html();
      if(value == "1/2"){
        value = 0.5;
      } else if(!value){
        value = 0;
      } else {
        value = parseInt(value, 10);
        }i
      sum += value;
      $(event.target).attr("title", "Summe: " + sum);
    }
  },
  messages: {}
}

$(document).ready(function(){
  $("div.description").bind("click", SUBMARINE.toggleDescription);
  $("ul > li > span.story_points").bind("mouseover", SUBMARINE.showStoryPointsSum);
});

