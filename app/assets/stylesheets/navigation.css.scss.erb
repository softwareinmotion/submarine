@font-face {
  font-family: Conv_whitehall;
  src: url('whitehall.ttf'); 
}

$strip-line: 1px solid #ddd;

html {
  background: -webkit-linear-gradient(#DDD,#F2F1F0);
  background: -moz-linear-gradient(#DDD, #F2F1F0) repeat scroll 0 0 transparent;
  background: -o-linear-gradient(#DDD,#F2F1F0);
  background: linear-gradient(#DDD,#F2F1F0) repeat scroll 0 0 transparent;
  background-repeat: no-repeat;
  background-attachment: fixed;
  margin: 0;
  height: 100%;
}

div#ilike{
  height: 20px;
  border: none;
  float: right;
  padding-top: 10px;
  iframe {
    border: none;
    width: 150px;
  }
}

body {
  //font-family: "Times New Roman", serif;
  color: #373737;
	font: 15px "Helvetica Neue", Helvetica, Arial, sans-serif;
	font-weight: 300;
	line-height: 1.625;
  margin: 0;
  padding: 0;
  border: 0;
  letter-spacing: 0.1em;
  font-size: 12pt;

  h1 {
    font-family: 'Open Sans', sans-serif;
    font-size: 11pt;
    padding-top: 15px;
    background-image: url(<%= asset_path "strich-submarine.gif" %>);
    padding-bottom: 30px;
    background-repeat: no-repeat;
  }

  h2 {
    font-family: 'Open Sans', sans-serif;
    font-size: 11pt;
    margin-left: 20px;
    padding-top: 15px;
    background-image: url(<%= asset_path "strich-submarine.gif" %>);
    padding-bottom: 30px;
    background-repeat: no-repeat;

  }

  section {
    margin: 0 auto;
    width: 800px;
    background-color: white;
       &.contact_data {
      height: auto;
    }

    article {
      width: 350px;
      float: left;
      padding: 10px 20px;
    }

    #left_article {
      margin-right: 20px;
    }

    #contact_data {
      font-family: 'Open Sans', sans-serif;
      font-size: 10pt;
      margin: 10px;
      width: 100%;

      h2 {
        margin-top: 0;
        margin-bottom: 15px;
      }

      label {
        display: block;
        width: 150px;
        text-align: right;
        float: left;
        margin-right: 10px;
      }

      input {
        width: 300px;

        &[type=button] {
          width: auto;
          margin-left: 160px;
        }
      }

      textarea {
        height: 200px;
        width: 300px;
      }
    }

    a.demo {
      text-align: center;
      display: block;
    }
  }
}

header {
  height: 83px;
  background: white;
  border-bottom: $strip-line;
  margin-bottom: 45px;
  min-width: 1340px;
  
  img#logo {
    padding-left: 10px;
    padding-top: 10px;
  }
}

footer {
  font-family: 'Open Sans', sans-serif;
  background: white;
  border-top: $strip-line;
  padding: 6px 0;
  clear: both;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;

  img {
    height: 14px;
  }
  span:nth-child(2) {
    display: block;
    float: right;
    margin-right: 1.5em;
  }
}
div#flashnotice {
  margin: 0 auto;
  width: 800px;
  background-color: white;
}

a {
  text-decoration: none;
  color: #00665E;
}

ul#feature_list{
  list-style: none;
  padding-left: 0px;
  li {
    background-image: url(<%= asset_path "check_tick.png" %>);
    background-repeat: no-repeat;
    background-position: 0 -5px;
    margin-bottom: 2ex;
    padding-left: 35px;
  }
}

div#post_it {
  font-family: Conv_whitehall;
  font-size: 12pt;
  background:#fefabc;
  padding:15px;
  color: #000;
  width:200px; 

  -moz-transform: rotate(-5deg);
  -webkit-transform: rotate(-5deg);
  -o-transform: rotate(-5deg);
  -ms-transform: rotate(-5deg);
  transform: rotate(-5deg);

  box-shadow: 0px 4px 6px #333;
  -moz-box-shadow: 0px 4px 6px #333;
  -webkit-box-shadow: 0px 4px 6px #333;
}
div#post_it_left {
  background:#fefabc;
  padding:15px;
  color: #000;
  width:200px; 
  margin-top: 30px;

  -moz-transform: rotate(5deg);
  -webkit-transform: rotate(5deg);
  -o-transform: rotate(5deg);
  -ms-transform: rotate(5deg);
  transform: rotate(5deg);

  box-shadow: 0px 4px 6px #333;
  -moz-box-shadow: 0px 4px 6px #333;
  -webkit-box-shadow: 0px 4px 6px #333;
}
a.button {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 14px;
	color: #000000;
	padding: 8px 20px;
	background: -moz-linear-gradient(
		top,
		#ffffff 0%,
		#3e99a3);
	background: -webkit-gradient(
		linear, left top, left bottom, 
		from(#ffffff),
		to(#3e99a3));
	border-radius: 10px;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	border: 1px solid #000000;
	-moz-box-shadow:
		0px 1px 3px rgba(000,000,000,0.5),
		inset 0px 0px 5px rgba(255,255,255,0.6);
	-webkit-box-shadow:
		0px 1px 3px rgba(000,000,000,0.5),
		inset 0px 0px 5px rgba(255,255,255,0.6);
	text-shadow:
		0px -1px 3px rgba(255,255,255,0.8),
		0px 1px 0px rgba(255,255,255,0.3);
              
}
div.fancybox-thumb {
  padding: 10px;
  background-color: #fff;

}
