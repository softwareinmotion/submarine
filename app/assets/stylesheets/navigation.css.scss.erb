@import "compass";
@import "swimbox";

@font-face {
  font-family: Conv_whitehall;
  src: asset-url('whitehall.ttf');
}

$width: 1240px;
$strip-line: 1px solid #ddd;

html {
  $experimental-support-for-svg: true;
  background-color: #dddddd;
  @include background-image(linear-gradient(#DDD 0%,#F2F1F0 300px));
  background-repeat: no-repeat;
  background-attachment: fixed;
  margin: 0;
  height: 100%;
}

.center {
  width: $width;
  margin-left: auto;
  margin-right: auto;
}

div#ilike{
  height: 20px;
  border: none;
  float: right;
  padding-top: 10px;
  iframe {
    border: none;
    width: 150px;
  }
}

body {
  color: #373737;
  font: 15px "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 300;
  line-height: 1.625;
  margin: 0;
  padding: 0;
  border: 0;
  letter-spacing: 0.1em;
  font-size: 12pt;

  a {
    img {
      border-style: none;
    }
  }

  h1 {
    font-family: 'Open Sans', sans-serif;
    font-size: 11pt;
    padding-top: 15px;
    background-image: url(<%= asset_path "strich-submarine.gif" %>);
    padding-bottom: 30px;
    background-repeat: no-repeat;
  }

  h2 {
    font-family: 'Open Sans', sans-serif;
    font-size: 11pt;
    margin-left: 20px;
    padding-top: 15px;
    background-image: url(<%= asset_path "strich-submarine.gif" %>);
    padding-bottom: 30px;
    background-repeat: no-repeat;

  }

  section {
    margin: 0 auto;
    width: 800px;
    background-color: white;
       &.contact_data {
      height: auto;
    }

    article {
      width: 350px;
      float: left;
      padding: 10px 20px;
    }

    #left_article {
      margin-right: 20px;
    }

    #contact_data {
      font-family: 'Open Sans', sans-serif;
      font-size: 10pt;
      margin: 10px;
      width: 100%;

      h2 {
        margin-top: 0;
        margin-bottom: 15px;
      }

      label {
        display: block;
        width: 150px;
        text-align: right;
        float: left;
        margin-right: 10px;
      }

      input {
        width: 300px;

        &[type=button] {
          width: auto;
          margin-left: 160px;
        }
      }

      textarea {
        height: 200px;
        width: 300px;
      }
    }

  }
}

header {
  height: 83px;
  background: white;
  border-bottom: $strip-line;
  margin-bottom: 45px;
  min-width: 1340px;

  img#logo {
    padding-left: 10px;
    padding-top: 10px;
  }

  .menu-left {
    float: left;
    width: 30%;
  }

  .menu-center {
    height: 85px;
    text-align: center;
    h1 {
      margin-top: 50px;
    }
  }

  .menu-right {
    float: right;
    width: 30%;

    .stack { margin: 0; padding: 0; float: right; margin-right: 6px;}
    .wrapper { height:85px; display:table-cell; vertical-align:bottom; }
    .content { padding-bottom: 4px; max-height:100px; overflow:auto; }
    .content div { padding: 0; margin: 0; }
    #back-link { margin-bottom: 20px; }
  }
}

footer {
  color: black;
  height: 17px;
  font-family: verdana, arial, helvetica, sans-serif;
  font-size: 10pt;
  line-height: 1;
  letter-spacing: 0;
  background: white;
  border-top: $strip-line;
  padding: 6px 0;
  clear: both;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;

  img {
    height: 14px;
  }
  span:nth-child(2) {
    display: block;
    float: right;
    margin-right: 1.5em;
  }

  .menu-left {
    display: block;
    float: left;
    width: 30%;
    min-height: 10px;
  }

  .menu-center {
    text-align: center;
  }

  .menu-right {
    float: right;
    text-align: right;
    padding-right: 7px;
    width: 30%;
  }
}
div#flashnotice {
  margin: 0 auto;
  width: 800px;
  background-color: white;
}

a {
  text-decoration: none;
  color: #00665E;
}

ul#feature_list{
  list-style: none;
  padding-left: 0px;
  li {
    background-image: url(<%= asset_path "check_tick.png" %>);
    background-repeat: no-repeat;
    background-position: 0 -5px;
    margin-bottom: 2ex;
    padding-left: 35px;
  }
}

div#post_it {
  font-family: Conv_whitehall;
  font-size: 12pt;
  background:#fefabc;
  padding:15px;
  color: #000;
  width:200px;

  -moz-transform: rotate(-5deg);
  -webkit-transform: rotate(-5deg);
  -o-transform: rotate(-5deg);
  -ms-transform: rotate(-5deg);
  transform: rotate(-5deg);

  box-shadow: 0px 4px 6px #333;
  -moz-box-shadow: 0px 4px 6px #333;
  -webkit-box-shadow: 0px 4px 6px #333;
}
div#post_it_left {
  background:#fefabc;
  padding:15px;
  color: #000;
  width:200px;
  margin-top: 30px;

  -moz-transform: rotate(5deg);
  -webkit-transform: rotate(5deg);
  -o-transform: rotate(5deg);
  -ms-transform: rotate(5deg);
  transform: rotate(5deg);

  box-shadow: 0px 4px 6px #333;
  -moz-box-shadow: 0px 4px 6px #333;
  -webkit-box-shadow: 0px 4px 6px #333;
}
a.button {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 14px;
	color: #000000;
	padding: 8px 20px;
	$experimental-support-for-svg: true;
  background-color: #3e99a3;
  @include background-image(linear-gradient(#ffffff 0%, #3e99a3));
	border-radius: 10px;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	border: 1px solid #000000;
	-moz-box-shadow:
		0px 1px 3px rgba(000,000,000,0.5),
		inset 0px 0px 5px rgba(255,255,255,0.6);
	-webkit-box-shadow:
		0px 1px 3px rgba(000,000,000,0.5),
		inset 0px 0px 5px rgba(255,255,255,0.6);
	text-shadow:
		0px -1px 3px rgba(255,255,255,0.8),
		0px 1px 0px rgba(255,255,255,0.3);

    &.demo {
      text-align: center;
      display: block;

      &.inactive {
        $experimental-support-for-svg: true;
        background-color: #dddddd;
        @include background-image(linear-gradient(#ffffff 0%, #dddddd));
        border-radius: 10px;
        -moz-border-radius: 10px;
        -webkit-border-radius: 10px;
        border: 1px solid #000000;
        -moz-box-shadow:
          0px 1px 3px rgba(000,000,000,0.5),
          inset 0px 0px 5px rgba(255,255,255,0.6);
        -webkit-box-shadow:
          0px 1px 3px rgba(000,000,000,0.5),
          inset 0px 0px 5px rgba(255,255,255,0.6);
        text-shadow:
          0px -1px 3px rgba(255,255,255,0.8),
          0px 1px 0px rgba(255,255,255,0.3);
        cursor: default;
      }
    }
}
div.fancybox-thumb {
  padding: 10px;
  background-color: #fff;

}
input.question_submit{
  width: 100px !important;
  margin-top: 20px;
  margin-left: 160px;
  margin-right: 10px;
  font-family: Arial, Helvetica, sans-serif;
	font-size: 14px;
	color: #000000;
	padding: 8px 20px;
  $experimental-support-for-svg: true;
  @include background-image(linear-gradient(#ffffff 0%, #3e99a3));
	border-radius: 10px;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	border: 1px solid #000000;
	-moz-box-shadow:
		0px 1px 3px rgba(000,000,000,0.5),
		inset 0px 0px 5px rgba(255,255,255,0.6);
	-webkit-box-shadow:
		0px 1px 3px rgba(000,000,000,0.5),
		inset 0px 0px 5px rgba(255,255,255,0.6);
	text-shadow:
		0px -1px 3px rgba(255,255,255,0.8),
		0px 1px 0px rgba(255,255,255,0.3);


}
p.question_counter {
  color: white;
}
section#impressum {
  font-size: 10pt;
  .clear {
    clear: both;
    height: 10px;
  }
}

.update-ie {
  font-size: 10pt;
  font-style: italic;
  text-align: center;
}

noscript p {
  font-size: 10pt;
  font-style: italic;
  text-align: center;
}

#navigation {
  font-family: verdana, arial, helvetica, sans-serif;
  font-size: 10pt;
  letter-spacing: 0;
  width: 700px;
  text-align: right;
  height: 25px;

  a {
    vertical-align: middle;
    height: inherit;
    margin: 0;
    padding-top: 7px;
    padding-bottom: 7px;
    padding-left: 10px;
    padding-right: 10px;

    &.selected {
      background-color: #168a94;
      color: white;
    }
  }
}
